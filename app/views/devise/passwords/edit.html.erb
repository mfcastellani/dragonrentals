 <div class="container mt-4">
  <h2 class="fw-light text-center ">Mude sua senha</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

  <div class="row mt-2 d-flex justify-content-center">
    <div class="col-md-4">
      <div class="row mb-3">
          <div class="form-inputs">
            <%= f.input :password,
                        label: "",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} caracteres mÃ­nimos" if @minimum_password_length),
                        placeholder: "Nova Senha",
                        input_html: { autocomplete: "" } %>
            <%= f.input :password_confirmation,
                        label: "",
                        required: true,
                        placeholder:"Confirme sua nova senha",
                        input_html: { autocomplete: "Nova Senha" } %>
          </div>
      </div>
    </div>
  </div>

     <div class="container">
      <div class="row">
        <div class="form-actions col text-center ">
          <%= f.button :submit, "Mudar minha senha", class:"btn btn-success" %>
        </div>
      </div>
    </div>
    </br>


</div>
<% end %>

<%= render "devise/shared/links" %>
