<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
<%= f.input :username %><%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "deixe em branco se não quiser mudar",
                required: false,
                input_html: { autocomplete: "Nova Senha" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "Nova Senha" } %>
    <%= f.input :current_password,
                hint: "precisamos de sua senha atual para confirmar suas alterações",
                required: true,
                input_html: { autocomplete: "Senha atual" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Atualizar" %>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Infeliz? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
