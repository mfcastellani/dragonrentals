<p id="notice"><%= notice %></p>

  <div class="container">
    <div class="card">        
        <d class="card-body">
          <h5 class="card-title text-center fw-light">Postagens
          </h5>
          <%= link_to 'Nova Postagem', new_post_path, class:"btn btn-success float-end" %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Título</th>
                <th scope="col">Corpo do texto</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td scope="row"><%= post.title %></td>
                  <td><%= post.body %></td>
                  <td><%= link_to 'Mostrar', post %></td>
                  <td><%= link_to 'Editar', edit_post_path(post) %></td>
                  <td><%= link_to 'Deletar', post, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
      </div>
    </div>
<br>